<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/whiteListingInfoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your information here"
        android:textColor="@color/cardview_dark_background"
        android:textSize="16sp"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/radioButtons"
        app:layout_constraintEnd_toEndOf="@+id/resendButton"
        app:layout_constraintStart_toStartOf="@+id/resendButton"
        app:layout_constraintTop_toBottomOf="@+id/resendButton" />

    <RadioGroup
        android:id="@+id/radioButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/whiteListingInfoText"
        app:layout_constraintStart_toStartOf="@+id/resendButton"
        app:layout_constraintEnd_toEndOf="@+id/resendButton">

        <RadioButton
            android:id="@+id/radioYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/whyInfoLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Additional Information"
        android:textColor="@color/cardview_dark_background"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/radioButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>